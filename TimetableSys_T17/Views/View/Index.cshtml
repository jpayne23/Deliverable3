@model IEnumerable<TimetableSys_T17.Models.ViewModel>
@{
    Layout = null;
}
@Scripts.Render("~/bundles/modernizr")
@Styles.Render("~/Content/css")
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")

<!DOCTYPE html>
<style type="text/css">
    td {
        width:120px;
    }

</style>
<html>
<head>
    
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>View Request</title>


    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap-theme.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('[data-toggle="popover"]').popover({
                placement: 'left',
                html: true,
                container: 'body'
            });
        });
    </script>
    <style type="text/css">
        .popover {
            max-width:100%;
        }
        .table-hover tbody tr:hover td, .table-hover tbody tr:hover th {
          background-color: pink;
        }

        td, th{
          text-align: center;
        }

	
        h4{
          text-align: center;
        }
	
        .tableFilter{
           margin-left: auto;
           margin-right: auto;
        width:67%;
        }
        .mainTable{
            margin-left: auto;
            margin-right: auto;
        }
        table.scroll {
            width: 85%;
        }

        table.scroll tbody,
        table.scroll thead { display: block; }

        thead tr th { 
            height: auto;
            line-height: 30px;
            width: 100px;
        }

        table.scroll tbody {
            height: 740px;
            overflow-y: scroll;
            overflow-x: hidden;
        }

        tbody { 
        border-top: none; 
        }

        tbody td, thead th {
              width: 100px;

        }
        .weeks {
              width:200px;
        }

        tbody td:last-child, thead th:last-child {
        border-right: none;
        }
    </style>
</head>
<body>

    <div class="container">























 <form action="" method="get">
	<table class="tableFilter">
     <thead>
	 <tr>
	<th colspan="6"><h4>Filter Options</h4></th>
    </thead>
	<tr>
	<tbody>
		<tr>
			<td>
               
                Module Code:<br/>
			    <select name="moduleCode">
                    <option value="">Any</option>
			        <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
			    </select>
			</td>
			
			<td>Semester:	<br/>		
			    <select name="semester">
                    <option value="">Any</option>
			        <option value="1">One</option>
                    <option value="2">Two</option>
			    </select>
			</td>
			
			
			
			<td>Day:<br/>
			<select name="day">
                <option value="">Any</option>
		    	<option value="1">Monday</option>
                <option value="2">Tuesday</option>
                <option value="3">Wednesday</option>
                <option value="4">Thursday</option>
                <option value="5">Friday</option>
			</select>
			</td>
			
			<td>Status:<br/>
			<select name="status">
                <option value="">Any</option>
			    <option value="1">Accepted</option>
                <option value="2">Rejected</option>
                <option value="3">Altered</option>
                <option value="4">Pending</option>
                <option value="5">Cancelled</option>
			</select>
			</td>
            <td>
                Round ID:<br />
                <select id="roundID" name="roundID">
                    <option value="">Any</option>
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                </select>
            </td>
			
			<td>
			    <input type="submit" value="Filter" />
			</td>
            <td><input type="submit" value="View all"/></td>

		</tr>



	</tbody>
	
	</table>
  </form>
	<br/>	
	
	
	

  <table class="table table-striped table-hover mainTable table-bordered scroll">
  <tbody>
      <tr>
        <td>@Html.ActionLink("Request ID", "Index", new{ sortOrder = ViewBag.IDSortPram})</td>
        <td>@Html.ActionLink("Module ID", "Index", new{sortOrder = ViewBag.ModuleSortPram})</td>
        <td>Room</td>
        <td>Day</td>
        <td>Week(s)</td>
        <td>Period</td>		
        <td>Session length</td>
        <td>Status</td>

	
		
      </tr>
  
    
      
      @foreach(var x in Model){
            <tr>
                
                <td> @x.requestID </td>
                <td> @x.moduleCode </td>
                <td> @x.moduleID </td>
                <td> @x.day </td>
                <td class="weeks">
                   @x.weekID

                </td>
                <td> @x.periodID  </td>
                <td> @x.sessionLength Hour(s) </td>
                <td> @x.status </td>
                <td><a href='#'>Edit</a></td>
                <td>   <button type="button" class="btn btn-info" data-toggle="popover" title="Request ID: @x.requestID" 
                    data-content="
                            <table>
                                <tr>
                                    <td>Booked by: (Email) </td>
                                    <td>Session Type: </td>
                                    <td>Semester: </td>
                                    <td>Year</td>
                                    <td>Priority:</td>
                                    <td>Type of request: (adhoc?)</td>
                                    <td>Special Requirements</td>
             
                                </tr>
                                <tr>
                                    <td><a> @x.email </a>
    
                                    </td>
                                    <td> @x.sessionType </td>
                                    <td> @x.semester  </td>
                                    <td> @x.year </td>
                                    <td> 

                                        @if(x.priority == 1){
                                            <span>Yes</span>
                                        } else {
                                            <span>No</span>
                                        }
                    
                                        
                                    </td>
                                    <td> @if(x.adhoc == 1){
                                            <span>Yes</span>
                                        } else {
                                            <span>No</span>
                                        }
                                    </td>
                                    <td> @x.specialRequirement </td>

                                </tr>
                                <tr>
                                
                                </tr>
                            </table>
                    ">

                        More Information

                    </button>
                    
                        </td>
                <td> @Html.ActionLink("Cancel", "Index", new {cancelledID=x.requestID})</td>
            </tr>
      }
    </tbody> 

  </table>
  
  
  
<script>
    var $table = $('table.scroll'),
        $bodyCells = $table.find('tbody tr:first').children(),
        colWidth;

    $(window).resize(function () {
        colWidth = $bodyCells.map(function () {
            return $(this).width();
        }).get();

        $table.find('thead tr').children().each(function (i, v) {
            $(v).width(colWidth[i]);
        });
    }).resize();
</script>
</body>
</html>
