@model TimetableSys_T17.Room

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>

<div>
    <h4>Room</h4>
    <hr />
    <dl class="dl-horizontal">

        <dt>
            @Html.LabelFor(model => model.roomCode, "Room Code")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.roomCode)
        </dd>

        <dt>
            @Html.LabelFor(model => model.Building.buildingName, "Building Name")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Building.buildingName)
        </dd>

        <dt>
            @Html.LabelFor(model => model.capacity, "Capacity")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.capacity)
        </dd>

        <dt>
            @Html.LabelFor(model => model.lab, "Lab")
        </dt>

        <dd>
            @if(@ViewBag.Lab == 1){
                <p>Yes</p>
            }
            else{
                <p>No</p>
            }
        </dd>
    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.roomID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
