@model TimetableSys_T17.Room

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
 <link rel="stylesheet" href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">
<script src="//code.jquery.com/jquery-1.10.2.js"></script>
<script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
<link rel="stylesheet" href="/resources/demos/style.css">
<link rel="stylesheet" href="../../content/rooms.css">
<script type="text/javascript">
   
    $(function() {
        $( "#slider-range-min" ).slider({
            range: "min",
            value: 42,
            min: 1,
            max: 401,
            slide: function( event, ui ) {
                $("#cap").val($("#slider-range-min").slider("value"));
                $("#amount").val($("#slider-range-min").slider("value"));
            }
        });
        $("#amount").val($("#slider-range-min").slider("value"));
        $("#cap").val($("#slider-range-min").slider("value"));
    });
    
</script>

<h2>Create</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="centre">
        <h4 class="centre">Room</h4>
        <hr />
        @Html.ValidationSummary(true)


    <div class="centre">
            @Html.LabelFor(model => model.roomCode, "Room Code", htmlAttributes: new { @class = "centre" })
            @Html.EditorFor(model => model.roomCode)
            @Html.ValidationMessageFor(model => model.roomCode)
      </div>

<hr />
        <div class="centre">
            @Html.LabelFor(model => model.buildingID, "Building Name", htmlAttributes: new { @class = "centre" } )

                @Html.DropDownList("buildingID", "Select") 
                @*@Html.ValidationMessageFor(model => model.buildingID)*@

        </div>



<hr> 



        <div class="form-group">
            <label> Facility Name</label>
<br />
            @Html.ListBox("fac",
                 new MultiSelectList(@ViewBag.facilities, "facilityID", "facilityName"), htmlAttributes: new { @class = "select"} )
        </div>

<hr /> 


        <div class="form-group">
            <div class="centre">
                <p class="centre">
                    <label style="margin-left:15%" for="amount">Capacity:</label>
                    <input type="text" id="amount" style="border:0; color:#f6931f; font-weight:bold;" />
                </p>
                <div class="centre" id="slider-range-min"></div>
            </div>
            @Html.HiddenFor(model => model.capacity, new {@id="cap"})
        </div>

<hr />

        <div class="form-group">
            @Html.LabelFor(model => model.lab, "Lab" ,htmlAttributes: new { @class = "centre" })
            <div class="centre">
                @if(@ViewBag.Lab == 1){
                    @Html.CheckBox("Labe",true)
                }
                else{
                    @Html.CheckBox("Labe")
                }   
            </div>
        </div>
        <div class="form-group">
            <div class="centre">
                <input type="submit" value="Create Room" class="btn btn-default" />
            </div>
        </div>
    </div>
    
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
